{
	"name": "thegridstrategy",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:ui": "vitest --ui",
		"test:run": "vitest run",
		"test:e2e": "playwright test",
		"test:coverage": "vitest run --coverage",
		"test:watch": "vitest --watch",
		"test:client": "vitest run --project=client --reporter=json > ./test-results/client-results.json",
		"test:server": "vitest run --project=server --reporter=json > ./test-results/server-results.json",
		"test:integration": "vitest run --project=integration --reporter=json > ./test-results/integration-results.json",
		"test:storybook": "vitest run --project=storybook --reporter=json > ./test-results/storybook-results.json",
		"test:component": "npm run test:client",
		"test:unit": "npm run test:server",
		"test:all": "vitest run --reporter=json --coverage > ./test-results/vitest-results.json",
		"test:ci": "mkdir test-results coverage playwright-report && npx playwright install && vitest run --coverage --reporter=junit --reporter=json",
		"test:report": "npm run clean-reports && mkdir -p test-results && npm run test:all && npm run generate-report",
		"test:report-open": "npm run test:report && npm run open-reports",
		"test:report-workspace": "npm run clean-reports && mkdir -p test-results && npm run test:client && npm run test:server && npm run test:integration && npm run generate-report",
		"generate-report": "node scripts/generate-report.js",
		"open-reports": "node scripts/open-reports.js",
		"clean-reports": "rimraf test-results coverage playwright-report",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build"
	},
	"dependencies": {
		"@felte/validator-zod": "1.0.18",
		"@rainlanguage/orderbook": "^0.0.1-alpha.11",
		"@reown/appkit": "^1.7.4",
		"@reown/appkit-adapter-wagmi": "^1.7.4",
		"@reown/appkit-wallet": "^1.7.5",
		"chart.js": "^4.4.9",
		"chartjs-adapter-date-fns": "^3.0.0",
		"clsx": "^2.1.1",
		"date-fns": "^4.1.0",
		"ethers": "^6.14.1",
		"felte": "1.3.0",
		"tailwind-merge": "^3.3.0",
		"viem": "^2.29.4",
		"wagmi": "^2.15.3",
		"zod": "3.25.30"
	},
	"devDependencies": {
		"@chromatic-com/storybook": "^3",
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@playwright/test": "^1.49.1",
		"@storybook/addon-essentials": "^8.6.14",
		"@storybook/addon-svelte-csf": "^5.0.0-next.0",
		"@storybook/blocks": "^8.6.14",
		"@storybook/experimental-addon-test": "^8.6.14",
		"@storybook/svelte": "^8.6.14",
		"@storybook/sveltekit": "^8.6.14",
		"@storybook/test": "^8.6.14",
		"@sveltejs/adapter-vercel": "^5.6.3",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@tailwindcss/forms": "^0.5.9",
		"@tailwindcss/typography": "^0.5.15",
		"@tailwindcss/vite": "^4.0.0",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.8",
		"@testing-library/user-event": "^14.6.1",
		"@types/node": "^22",
		"@vitest/browser": "^3.1.4",
		"@vitest/coverage-v8": "^3.1.4",
		"@vitest/ui": "^3.1.4",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"happy-dom": "^17.5.6",
		"jsdom": "^26.1.0",
		"playwright": "^1.52.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"rimraf": "^6.0.1",
		"storybook": "^8.6.14",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^6.2.6",
		"vitest": "^3.0.0"
	}
}